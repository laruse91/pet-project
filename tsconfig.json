{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src"
    //    "paths": {
    //      "*": ["/src/*"]
    //    }
  },
  "include": [
//    "./config/jest/setupTests.ts",
    "./config/build/BuildWebpackConfig.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJs"
    }
  }
}
